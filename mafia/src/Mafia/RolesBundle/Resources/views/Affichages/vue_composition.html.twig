{% extends "FOSUserBundle::layout.html.twig" %}


{% block title %}Mafia - {{ composition.nomComposition }}{% endblock %}

{% block fos_user_content %}

    <h3>{{ composition.nomCompo }}</h3>

    <h4>Rôles</h4>
    <ul>
        {% for role in composition.rolesCompo %}
            <li>{{ role.role.nomRole }} x {{ role.quantite }} => {{ importances[role.role.id] }}</li>
        {% endfor %}
        {% for categorie in composition.categoriesCompo %}
            <li>{{ categorie.categorie.nomCategorie }} x {{ categorie.quantite }}</li>
        {% endfor %}
    </ul>

    <h4>Options changées</h4>
    <ul>
        {% for option in composition.optionsRoles %}
            <li>{{ options[option.enumOption]  }} => {{ option.valeur }}</li>
        {% endfor %}
    </ul>
{% endblock %}